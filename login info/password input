# Dictionary that stores information in terms of username:password 
accounts = {"thisismyusername":"coolpassword"}


accounts2 = {"obama": "llama", "banana": "fofana"}
print(accounts2["obama"])
print(accounts2["banana"])


# WIP
def makeAccount ():
   #accounts_file = open("accounts.txt", "r")

    username = input("Pick a username ")
    password = input("Pick a password ")
    
    accounts = accounts + {username, password}
    return accounts
makeAccount()

# WIP
def checkLogInfo(username, password):
    correct_login = False

    while correct_login == False:
        if password == accounts[username]
            correct_login = True
